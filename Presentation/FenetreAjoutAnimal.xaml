<Window x:Class="Presentation.FenetreAjoutAnimal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un animal (avec entrée au refuge)" Height="620" MinHeight="520" Width="460"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <TextBlock Text="Animal" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
        <StackPanel Grid.Row="1">
            <Grid Margin="0,0,0,6">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Identifiant (yymmdd99999)" VerticalAlignment="Center" ToolTip="yymmdd = date d'entrée, puis 5 chiffres"/>
                <TextBox x:Name="TbIdentifiant" Grid.Column="1" MaxLength="11" Padding="4,2"/>
                <Button Grid.Column="2" Content="Générer" Margin="6,0,0,0" Padding="8,2" Click="GenererIdentifiant_Click"/>
                <TextBlock x:Name="ErrIdentifiant" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Foreground="Red" FontSize="11" Margin="0,2,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Nom" VerticalAlignment="Center"/>
                <TextBox x:Name="TbNom" Grid.Column="1" Padding="4,2"/>
                <TextBlock x:Name="ErrNom" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Type" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbType" Grid.Column="1" Padding="4,2" SelectedIndex="0">
                    <ComboBoxItem Content="chat"/>
                    <ComboBoxItem Content="chien"/>
                </ComboBox>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Sexe" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbSexe" Grid.Column="1" Padding="4,2" SelectedIndex="0">
                    <ComboBoxItem Content="M"/>
                    <ComboBoxItem Content="F"/>
                </ComboBox>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Date de naissance" VerticalAlignment="Center"/>
                <DatePicker x:Name="DpDateNaissance" Grid.Column="1"/>
                <TextBlock x:Name="ErrDateNaissance" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="CbSterilise" Content="Stérilisé" VerticalAlignment="Center" Checked="CbSterilise_Changed" Unchecked="CbSterilise_Changed"/>
            </Grid>
            <Grid Margin="0,0,0,6" x:Name="RowDateSterilisation" Visibility="Collapsed">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Date stérilisation" VerticalAlignment="Center"/>
                <DatePicker x:Name="DpDateSterilisation" Grid.Column="1"/>
                <TextBlock x:Name="ErrDateSterilisation" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Description" VerticalAlignment="Center"/>
                <TextBox x:Name="TbDescription" Grid.Column="1" Padding="4,2" TextWrapping="Wrap" AcceptsReturn="True" Height="40" VerticalContentAlignment="Top"/>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Particularités" VerticalAlignment="Center"/>
                <TextBox x:Name="TbParticularites" Grid.Column="1" Padding="4,2"/>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Couleur(s)" VerticalAlignment="Top" Margin="0,6,0,0"/>
                <ListBox x:Name="LbCouleurs" Grid.Column="1" Height="72" SelectionMode="Multiple"/>
            </Grid>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Entrée au refuge" FontWeight="Bold" FontSize="14" Margin="0,12,0,8"/>
        <StackPanel Grid.Row="3">
            <Grid Margin="0,0,0,6">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Motif d'entrée" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbRaison" Grid.Column="1" Padding="4,2"/>
                <TextBlock x:Name="ErrRaison" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Date d'entrée" VerticalAlignment="Center"/>
                <DatePicker x:Name="DpDateEntree" Grid.Column="1"/>
                <TextBlock x:Name="ErrDateEntree" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>
            </Grid>
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Contact (optionnel)" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbContact" Grid.Column="1" Padding="4,2" DisplayMemberPath="DisplayText"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Enregistrer" Padding="16,6" Margin="0,0,8,0" Click="Enregistrer_Click"/>
            <Button Content="Annuler" Padding="16,6" Click="Annuler_Click"/>
        </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
