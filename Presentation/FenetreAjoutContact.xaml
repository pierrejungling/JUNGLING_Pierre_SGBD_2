<Window x:Class="Presentation.FenetreAjoutContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un contact" Height="620" MinHeight="520" Width="520"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Contact" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>

            <StackPanel Grid.Row="1">
                <Grid Margin="0,0,0,6">
                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Nom" VerticalAlignment="Center"/>
                    <TextBox x:Name="TbNom" Grid.Column="1" Padding="4,2"/>
                    <TextBlock x:Name="ErrNom" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed"/>
                </Grid>

                <Grid Margin="0,0,0,6">
                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Prénom" VerticalAlignment="Center"/>
                    <TextBox x:Name="TbPrenom" Grid.Column="1" Padding="4,2"/>
                    <TextBlock x:Name="ErrPrenom" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed"/>
                </Grid>

                <Grid Margin="0,0,0,6">
                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Rue et n°" VerticalAlignment="Center"/>
                    <TextBox x:Name="TbRue" Grid.Column="1" Padding="4,2"/>
                    <TextBlock x:Name="ErrRue" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed"/>
                </Grid>

                <Grid Margin="0,0,0,6">
                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Code postal" VerticalAlignment="Center"/>
                    <TextBox x:Name="TbCp" Grid.Column="1" Padding="4,2"/>
                    <TextBlock x:Name="ErrCp" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed"/>
                </Grid>

                <Grid Margin="0,0,0,6">
                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Localité" VerticalAlignment="Center"/>
                    <TextBox x:Name="TbLocalite" Grid.Column="1" Padding="4,2"/>
                    <TextBlock x:Name="ErrLocalite" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed"/>
                </Grid>

                <Grid Margin="0,0,0,6">
                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Registre national" VerticalAlignment="Center" ToolTip="Format: yy.mm.dd-999.99"/>
                    <TextBox x:Name="TbRN" Grid.Column="1" Padding="4,2"/>
                    <TextBlock x:Name="ErrRN" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                </Grid>

                <TextBlock Text="Coordonnées (au moins une)" FontWeight="Bold" Margin="0,8,0,6"/>

                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="GSM" VerticalAlignment="Center"/>
                    <TextBox x:Name="TbGsm" Grid.Column="1" Padding="4,2"/>
                </Grid>

                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Téléphone" VerticalAlignment="Center"/>
                    <TextBox x:Name="TbTelephone" Grid.Column="1" Padding="4,2"/>
                </Grid>

                <Grid Margin="0,0,0,6">
                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Email" VerticalAlignment="Center"/>
                    <TextBox x:Name="TbEmail" Grid.Column="1" Padding="4,2"/>
                    <TextBlock x:Name="ErrEmail" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed"/>
                </Grid>

                <TextBlock x:Name="ErrCoordonnees" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>

                <TextBlock Text="Rôles (optionnel)" FontWeight="Bold" Margin="0,10,0,6"/>
                <ListBox x:Name="LbRoles" Height="90" SelectionMode="Multiple"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Enregistrer" Padding="16,6" Margin="0,0,8,0" Click="Enregistrer_Click"/>
                <Button Content="Annuler" Padding="16,6" Click="Annuler_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>

