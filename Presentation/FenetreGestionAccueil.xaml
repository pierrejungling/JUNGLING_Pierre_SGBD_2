<Window x:Class="Presentation.FenetreGestionAccueil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des familles d'accueil" Height="420" Width="520"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Presentation:NullableDateToEnCoursConverter x:Key="DateFinConv" xmlns:Presentation="clr-namespace:Presentation"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Familles d'accueil" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="ID animal:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="TxtIdAnimal" Width="120" Margin="0,0,10,0"/>
                <Button Content="Lister par animal" Padding="10,5" Click="ListerParAnimal_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ID contact:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="TxtIdContact" Width="80" Margin="0,0,10,0"/>
                <Button Content="Lister par famille" Padding="10,5" Click="ListerParFamille_Click"/>
            </StackPanel>
        </StackPanel>
        <ListBox x:Name="ListeAccueils" Grid.Row="2" Padding="2">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border HorizontalAlignment="Stretch" Padding="8,6" Margin="0,2" Background="#F5F5F5" CornerRadius="2" BorderBrush="#DDD" BorderThickness="0 0 0 1">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="13">
                                <Run Text="{Binding AnimalAccueilli.Nom}"/>
                                <Run Text=" ("/><Run Text="{Binding AnimalAccueilli.Type}"/><Run Text=")"/>
                                <Run Text=" · Famille: "/><Run Text="{Binding FamilleAccueil.Prenom}"/><Run Text=" "/><Run Text="{Binding FamilleAccueil.Nom}"/>
                            </TextBlock>
                            <TextBlock FontSize="11" Foreground="#555" Margin="0,2,0,0">
                                <Run Text="Début: "/><Run Text="{Binding DateDebut, StringFormat={}{0:dd/MM/yyyy}}"/>
                                <Run Text=" · Fin: "/>
                                <Run Text="{Binding DateFin, Converter={StaticResource DateFinConv}}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Ajouter" Margin="0,0,8,0" Padding="12,6" Click="Ajouter_Click"/>
            <Button Content="Fermer" Padding="12,6" Click="Fermer_Click"/>
        </StackPanel>
    </Grid>
</Window>
