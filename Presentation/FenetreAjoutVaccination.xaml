<Window x:Class="Presentation.FenetreAjoutVaccination"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un vaccin Ã  un animal" Height="280" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Nouvelle vaccination" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1">
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions><ColumnDefinition Width="100"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Animal" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbAnimal" Grid.Column="1" Padding="4,2" DisplayMemberPath="DisplayText"/>
            </Grid>
            <Grid Margin="0,0,0,8">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions><ColumnDefinition Width="100"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Nom du vaccin" VerticalAlignment="Center"/>
                <TextBox x:Name="TbNomVaccin" Grid.Column="1" Padding="4,2"/>
                <TextBlock x:Name="ErrNom" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed"/>
            </Grid>
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions><ColumnDefinition Width="100"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Date" VerticalAlignment="Center"/>
                <DatePicker x:Name="DpDate" Grid.Column="1"/>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Enregistrer" Padding="16,6" Margin="0,0,8,0" Click="Enregistrer_Click"/>
            <Button Content="Annuler" Padding="16,6" Click="Annuler_Click"/>
        </StackPanel>
    </Grid>
</Window>
