<Window x:Class="Presentation.FenetreGestionContacts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des contacts" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Contacts" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListBox x:Name="ListeContacts" Grid.Row="1" SelectionChanged="ListeContacts_SelectionChanged" Padding="2">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border HorizontalAlignment="Stretch" Padding="8,6" Margin="0,2" Background="#F5F5F5" CornerRadius="2" BorderBrush="#DDD" BorderThickness="0 0 0 1">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="13">
                                <Run Text="{Binding Nom}"/><Run Text=" "/><Run Text="{Binding Prenom}"/>
                                <Run Text=" · ID: "/><Run Text="{Binding Identifiant}"/>
                            </TextBlock>
                            <TextBlock FontSize="11" Foreground="#555" Margin="0,2,0,0">
                                <Run Text="Registre national: "/><Run Text="{Binding RegistreNational}"/>
                                <Run Text=" · GSM: "/><Run Text="{Binding Gsm}"/>
                                <Run Text=" · Tél: "/><Run Text="{Binding Telephone}"/>
                                <Run Text=" · "/><Run Text="{Binding Email}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Ajouter" Margin="0,0,8,0" Padding="12,6" Click="Ajouter_Click"/>
            <Button Content="Consulter" Margin="0,0,8,0" Padding="12,6" Click="Consulter_Click"/>
            <Button Content="Modifier" Margin="0,0,8,0" Padding="12,6" Click="Modifier_Click"/>
            <Button Content="Supprimer" Margin="0,0,8,0" Padding="12,6" Click="Supprimer_Click"/>
            <Button Content="Fermer" Padding="12,6" Click="Fermer_Click"/>
        </StackPanel>
    </Grid>
</Window>
