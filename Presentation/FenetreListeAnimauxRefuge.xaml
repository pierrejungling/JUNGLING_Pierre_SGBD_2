<Window x:Class="Presentation.FenetreListeAnimauxRefuge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animaux présents au refuge" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Animaux actuellement au refuge" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListBox x:Name="ListeAnimaux" Grid.Row="1" DisplayMemberPath="Nom" FontSize="14"/>
        <Button Grid.Row="2" Content="Rafraîchir" Margin="0,10,0,0" Padding="12,6" Click="Rafraichir_Click"/>
    </Grid>
</Window>
