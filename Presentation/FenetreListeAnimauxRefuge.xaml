<Window x:Class="Presentation.FenetreListeAnimauxRefuge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animaux présents au refuge" Height="400" Width="620"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Presentation:BoolToOuiNonConverter x:Key="BoolToOuiNon" xmlns:Presentation="clr-namespace:Presentation"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Animaux actuellement au refuge" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListBox x:Name="ListeAnimaux" Grid.Row="1" Padding="2">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border HorizontalAlignment="Stretch" Padding="8,6" Margin="0,2" Background="#F5F5F5" CornerRadius="2" BorderBrush="#DDD" BorderThickness="0 0 0 1">
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" FontSize="13">
                                <Run Text="{Binding Nom}"/>
                                <Run Text=" ("/><Run Text="{Binding Type}"/><Run Text=")"/>
                                <Run Text=" · "/>
                                <Run Text="{Binding Sexe, StringFormat=Sexe: {0}}"/>
                            </TextBlock>
                            <TextBlock FontSize="11" Foreground="#555" Margin="0,2,0,0">
                                <Run Text="ID: "/><Run Text="{Binding Identifiant}"/>
                                <Run Text=" · Naissance: "/><Run Text="{Binding DateNaissance, StringFormat={}{0:dd/MM/yyyy}}"/>
                                <Run Text=" · Stérilisé: "/><Run Text="{Binding Sterilise, Converter={StaticResource BoolToOuiNon}, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Row="2" Content="Fermer" Margin="0,10,0,0" Padding="12,6" Click="Fermer_Click"/>
    </Grid>
</Window>
