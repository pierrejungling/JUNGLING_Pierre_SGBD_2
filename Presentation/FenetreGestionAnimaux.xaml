<Window x:Class="Presentation.FenetreGestionAnimaux"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des animaux" Height="480" Width="620"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Gestion des animaux" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListBox x:Name="ListeAnimaux" Grid.Row="1" DisplayMemberPath="Nom" SelectionChanged="ListeAnimaux_SelectionChanged"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Ajouter" Margin="0,0,8,0" Padding="12,6" Click="Ajouter_Click"/>
            <Button Content="Consulter" Margin="0,0,8,0" Padding="12,6" Click="Consulter_Click"/>
            <Button Content="Supprimer" Margin="0,0,8,0" Padding="12,6" Click="Supprimer_Click"/>
            <Button Content="Fermer" Padding="12,6" Click="Fermer_Click"/>
        </StackPanel>
    </Grid>
</Window>
