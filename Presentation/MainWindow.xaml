<Window x:Class="Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Refuge Animaux - Menu principal" Height="420" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Refuge Animaux" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
        <StackPanel Grid.Row="1">
            <Button Content="1. Gestion des animaux" Margin="0,0,0,8" Padding="10,8" Click="MenuGestionAnimaux_Click"/>
            <Button Content="2. Gestion des contacts" Margin="0,0,0,8" Padding="10,8" Click="MenuGestionContacts_Click"/>
            <Button Content="3. Gestion des adoptions" Margin="0,0,0,8" Padding="10,8" Click="MenuGestionAdoptions_Click"/>
            <Button Content="4. Gestion des familles d'accueil" Margin="0,0,0,8" Padding="10,8" Click="MenuGestionAccueil_Click"/>
            <Button Content="5. Gestion des vaccinations" Margin="0,0,0,8" Padding="10,8" Click="MenuGestionVaccinations_Click"/>
            <Button Content="6. Gestion des entrées/sorties" Margin="0,0,0,8" Padding="10,8" Click="MenuGestionEntreeSortie_Click"/>
            <Button Content="7. Lister les animaux présents au refuge" Margin="0,0,0,8" Padding="10,8" Click="MenuListerAnimauxRefuge_Click"/>
            <Button Content="0. Quitter" Margin="0,20,0,0" Padding="10,8" Click="Quitter_Click"/>
        </StackPanel>
    </Grid>
</Window>
