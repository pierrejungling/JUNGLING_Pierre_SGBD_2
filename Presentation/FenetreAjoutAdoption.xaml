<Window x:Class="Presentation.FenetreAjoutAdoption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une adoption" Height="380" MinHeight="320" Width="480"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nouvelle adoption" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1">
            <Grid Margin="0,0,0,8">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Animal" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbAnimal" Grid.Column="1" Padding="4,2" DisplayMemberPath="DisplayText"/>
                <TextBlock x:Name="ErrAnimal" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Adoptant (contact)" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbAdoptant" Grid.Column="1" Padding="4,2" DisplayMemberPath="DisplayText"/>
                <TextBlock x:Name="ErrAdoptant" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Statut" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbStatut" Grid.Column="1" Padding="4,2" SelectedIndex="0">
                    <ComboBoxItem Content="demande"/>
                    <ComboBoxItem Content="acceptee"/>
                    <ComboBoxItem Content="rejet_environnement"/>
                    <ComboBoxItem Content="rejet_comportement"/>
                </ComboBox>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Date de demande" VerticalAlignment="Center"/>
                <DatePicker x:Name="DpDateDemande" Grid.Column="1"/>
                <TextBlock x:Name="ErrDateDemande" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Enregistrer" Padding="16,6" Margin="0,0,8,0" Click="Enregistrer_Click"/>
            <Button Content="Annuler" Padding="16,6" Click="Annuler_Click"/>
        </StackPanel>
    </Grid>
</Window>
