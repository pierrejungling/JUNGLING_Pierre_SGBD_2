<Window x:Class="Presentation.FenetreAjoutEntree"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une entrée au refuge" Height="320" Width="420"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Nouvelle entrée au refuge" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1">
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions><ColumnDefinition Width="120"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Animal" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbAnimal" Grid.Column="1" Padding="4,2" DisplayMemberPath="DisplayText"/>
            </Grid>
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions><ColumnDefinition Width="120"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Raison" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbRaison" Grid.Column="1" Padding="4,2" SelectedIndex="0">
                    <ComboBoxItem Content="abandon"/>
                    <ComboBoxItem Content="errant"/>
                    <ComboBoxItem Content="deces_proprietaire"/>
                    <ComboBoxItem Content="saisie"/>
                    <ComboBoxItem Content="retour_adoption"/>
                    <ComboBoxItem Content="retour_famille_accueil"/>
                </ComboBox>
            </Grid>
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions><ColumnDefinition Width="120"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Date d'entrée" VerticalAlignment="Center"/>
                <DatePicker x:Name="DpDate" Grid.Column="1"/>
            </Grid>
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions><ColumnDefinition Width="120"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Contact (optionnel)" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbContact" Grid.Column="1" Padding="4,2" DisplayMemberPath="DisplayText"/>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Enregistrer" Padding="16,6" Margin="0,0,8,0" Click="Enregistrer_Click"/>
            <Button Content="Annuler" Padding="16,6" Click="Annuler_Click"/>
        </StackPanel>
    </Grid>
</Window>
