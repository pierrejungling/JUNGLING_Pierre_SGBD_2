<Window x:Class="Presentation.FenetreAjoutAccueil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une famille d'accueil" Height="320" Width="420"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Nouvelle famille d'accueil pour un animal" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="1">
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions><ColumnDefinition Width="120"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Animal" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbAnimal" Grid.Column="1" Padding="4,2" DisplayMemberPath="DisplayText"/>
            </Grid>
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions><ColumnDefinition Width="120"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Famille d'accueil (contact)" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbContact" Grid.Column="1" Padding="4,2" DisplayMemberPath="DisplayText"/>
            </Grid>
            <Grid Margin="0,0,0,8">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <Grid.ColumnDefinitions><ColumnDefinition Width="120"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Date dÃ©but" VerticalAlignment="Center"/>
                <DatePicker x:Name="DpDateDebut" Grid.Column="1"/>
                <TextBlock x:Name="ErrDateDebut" Grid.Row="1" Grid.Column="1" Foreground="Red" FontSize="11" Margin="0,2,0,0" Visibility="Collapsed"/>
            </Grid>
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions><ColumnDefinition Width="120"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                <TextBlock Text="Date fin (optionnel)" VerticalAlignment="Center"/>
                <DatePicker x:Name="DpDateFin" Grid.Column="1"/>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Enregistrer" Padding="16,6" Margin="0,0,8,0" Click="Enregistrer_Click"/>
            <Button Content="Annuler" Padding="16,6" Click="Annuler_Click"/>
        </StackPanel>
    </Grid>
</Window>
